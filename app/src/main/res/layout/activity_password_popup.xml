<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordPopup">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Change"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/CurrentAccountText"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:text="Current Account" />

        <EditText
            android:id="@+id/OldPasswordField"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:hint="Old Password" />

        <EditText
            android:id="@+id/NewPasswordField1"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:hint="new Password" />

        <EditText
            android:id="@+id/NewPasswordField2"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:hint="confirm new password" />

        <Button
            android:id="@+id/ChangePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="changePassword"
            android:text="Submit" />

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>